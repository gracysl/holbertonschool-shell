#!/usr/bin/env bash
#This script manages manage_my_process.

PIDFILE="/var/run/my_process.pid"

# Function to start manage_my_process
function start_process {
    if [ -f "$PIDFILE" ]; then
        echo "manage_my_process is already running. PID: $(cat $PIDFILE)"
    else
        ./manage_my_process &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
    fi
}

# Function to stop manage_my_process
function stop_process {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        kill $PID
        wait $PID 2>/dev/null
        rm "$PIDFILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running"
    fi
}

# Function to restart manage_my_process
function restart_process {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Main logic to handle arguments
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
